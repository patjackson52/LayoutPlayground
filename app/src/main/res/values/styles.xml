<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorControlHighlight">@color/ic_light_green</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Title" >
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/txt_title_size</item>
    </style>

    <style name="SubTitle" >
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/txt_subtitle_size</item>
    </style>


    <style name="Text2" >
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/txt_subtitle_size</item>
    </style>

    <style name="SearchBoxText">
        <item name="android:textSize">@dimen/txt_search_box_size</item>
    </style>

    <style name="InfoCardTitle">
        <item name="android:textColor">@color/infoCardDarkText</item>
        <item name="android:textSize">@dimen/txt_info_card_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoCardSubTitle">
        <item name="android:textColor">@color/infoCardDarkText</item>
        <item name="android:textSize">@dimen/txt_info_card_subtitle_size</item>
    </style>

    <style name="CarouselButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ic_green</item>
    </style>

    <style name="CarouselItemPriceTextView">
        <item name="android:textColor">@color/carouselItemPrice</item>
        <item name="android:textSize">@dimen/txt_carousel_item_price</item>
    </style>


    <style name="CarouselItemNameTextView">
        <item name="android:textColor">@color/carouselItemName</item>
        <item name="android:textSize">@dimen/txt_carousel_item_name</item>
    </style>

    <style name="CarouselItemQuantityTextView">
        <item name="android:textColor">@color/carouselItemQuantity</item>
        <item name="android:textSize">@dimen/txt_carousel_item_quantity</item>
    </style>

    <style name="DiscountPriceTextView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/rounded_txt_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="QuantityPickerTextView">
        <item name="android:textColor">@color/ic_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/circle_border</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
